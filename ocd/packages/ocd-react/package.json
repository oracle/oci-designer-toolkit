{
  "name": "ocd-react",
  "version": "0.1.0",
  "description": "OKIT Open Cloud Designer",
  "author": {
    "name": "Andrew Hopkinson",
    "email": "andrew.hopkinson@oracle.com",
    "url": "https://github.com/oracle/oci-designer-toolkit"
  },
  "bugs": "https://github.com/oracle/oci-designer-toolkit/issues",
  "private": true,
  "main": "./build/extension.js",
  "homepage": "./",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onWebviewPanel:okitOcd"
  ],
  "contributes": {
    "commands": [
      {
        "command": "okitOcd.start",
        "title": "Start OKIT OCD Session",
        "category": "Okit Ocd"
      }
    ]
  },
  "build": {
    "appId": "com.oracle.okit-ocd",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "build/assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "build/assets/icon.ico"
    },
    "linux": {
      "icon": "build/assets/icon.png"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.4",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "oci-sdk": "^2.48.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "4.0.3",
    "typescript": "^4.9.3",
    "uuid": "^9.0.0",
    "vscode": "*",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "electron-start": "electron .",
    "preelectron-release-pack": "npm run build",
    "electron-release-pack": "electron-builder build --x64 --macos --win --linux -c.extraMetadata.main=build/electron.js",
    "preelectron-pack": "npm run build",
    "electron-pack": "electron-builder build -c.extraMetadata.main=build/electron.js",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -w -p ./"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/uuid": "^9.0.1",
    "@types/vscode": "^1.73.0",
    "@types/vscode-webview": "^1.57.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0"
  },
  "keywords": [
    "ocd",
    "okit",
    "web"
  ],
  "license": "UPL-1.0"
}
