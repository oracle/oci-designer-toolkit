# ------ Create File Storage Export
    - name: Create Export
      oci_export:
        region: "{{ region }}"
        state: 'present'
        file_system_id: "{{ '{{' }} {{ resource_name }}_id {{ '}}' }}"
        export_set_id: "{{ '{{' }} {{ resource_name }}MountTarget_export_set_id {{ '}}' }}"
        path: "{{ path }}"
        export_options:
            - source: "{{ source }}"
              access: "{{ access }}"
#              require_privileged_source_port: False
#              identity_squash: 'NONE'
      register: {{ resource_name }}Export
