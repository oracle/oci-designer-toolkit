
{% if read_only %}
# ------ Read Dybnamic Group
data "oci_identity_dynamic_groups" "{{ resource_name }}" {
    #Required
    compartment_id = {{ compartment_id }}
    filter {
        name = "id"
        values = [{{ ocid | safe }}]
    }
}

locals {
    {{ resource_name }}_id              = {{ ocid | safe }}
}
{% else %}
# ------ Create Dybnamic Group
resource "oci_identity_dynamic_group" "{{ resource_name }}" {
    provider       = oci.home_region
    #Required
    compartment_id = {{ tenancy_ocid }}
    description = {{ description | safe }}
    name = {{ display_name | safe }}
    matching_rule = {{ matching_rule | safe }}

    #Optional
{% if defined_tags is defined %}
    defined_tags   = {{ defined_tags | safe }}
{% endif %}
{% if freeform_tags is defined %}
    freeform_tags  = {{ freeform_tags | safe }}
{% endif %}
}

locals {
    {{ resource_name }}_id              = oci_identity_dynamic_group.{{ resource_name }}.id
}
{% endif %}
